---
import { Code } from 'astro/components';
import LinkButton from "./LinkButton.astro";
---

<div class="hero">
  <h1>License-Cop</h1>
  <p class="subtitle">Yet another license checker tool for your dependencies; focused on simplicity.</p>

  <div>
    <p>
      <Code code={`npm install license-cop --save-dev`} theme="light-plus" />
    </p>
  </div>

  <LinkButton href="/docs">Documentation</LinkButton>
</div>

<style lang="scss">
  @use "../styles/vars.scss" as *;

  .hero {
    width: 100%;
    height: 90vh;

    background-color: #f2f2f2;

    display: grid;
    justify-items: center;
    align-content: center;

  }

  h1 {
    font-size: 5rem;
    font-weight: 700;
    background-image: $accent-gradient;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    font-size: 1.2rem;
  }
</style>
