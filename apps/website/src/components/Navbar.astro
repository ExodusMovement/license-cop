---
import NavbarItem from "./NavbarItem.astro";

interface Props {
  whiteItems: boolean;
}

const { whiteItems } = Astro.props;
---

<nav>
  <div class="item-group">
    <NavbarItem isWhite={whiteItems} link="/" text="Home" />
    <NavbarItem isWhite={whiteItems} link="/docs" text="Docs" />
    <NavbarItem isWhite={whiteItems} link="/permissive" text="@license-cop/permissive" />
  </div>

  <div class="item-group">
    <NavbarItem isWhite={whiteItems} link="https://github.com/tobysmith568/license-cop" text="GitHub" newTab/>
    <NavbarItem isWhite={whiteItems} link="https://npmjs.com/package/license-cop" text="npm" newTab/>
  </div>
</nav>


<style lang="scss">
  nav {
    position: absolute;
    width: 100%;

    display: flex;
    justify-content: space-between;
  }

  .item-group {
    display: flex;
    flex-direction: row;

    padding: 0.5rem 1rem;
  }
</style>
