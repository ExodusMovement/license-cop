---
interface Props {
  link: string;
  text: string;
  newTab?: boolean;
  isWhite?: boolean;
}

const { link, text, newTab, isWhite } = Astro.props
---

<a href={link} class={isWhite ? "is-white" : ""} target={newTab ? "_blank" : null} >
  <div class="text">{text}</div>
</a>

<style lang="scss">
  @use "../styles/vars.scss" as *;

  a {
    padding: 1rem;
    color: $darkPrimary;
    text-decoration: none;
    font-weight: bold;

    &.is-white {
      color: $white;

      .text::before {
        background-color: $white;
      }
    }

    .text {
      position: relative;

      &::before {
        content: "";
        position: absolute;
        display: block;
        width: 100%;
        height: 0.12rem;
        bottom: -0.2rem;
        left: 0;
        background-color: $darkPrimary;
        transform: scaleX(0);
        transition: transform 0.3s ease;

        @media (prefers-reduced-motion) {
          transition: transform 0s ease;
        }
      }
    }

    &:hover {
      .text::before {
        transform: scaleX(1);
      }
    }
  }

  a:visited {
    color: $darkPrimary;

    &.is-white {
      color: $white;
    }
  }
</style>
