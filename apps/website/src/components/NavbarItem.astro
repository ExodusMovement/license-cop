---
interface Props {
  link: string;
  text: string;
  newTab?: boolean;
  isWhite?: boolean;
}

const { link, text, newTab, isWhite } = Astro.props
---

<div class="item">
  <a href={link} class={isWhite ? "is-white" : null} target={newTab ? "_blank" : null} >{text}</a>
</div>

<style lang="scss">
  .item {
    padding: 1rem 0;
  }

  a {
    padding: 1rem;
    color: darken($color: #2666d5, $amount: 10%);
    text-decoration: none;
    font-weight: bold;

    &.is-white {
      color: #fff;
    }
  }

  a:visited {
    color: darken($color: #2666d5, $amount: 10%);

    &.is-white {
      color: #fff;
    }
  }


</style>
