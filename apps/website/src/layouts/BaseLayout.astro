---
import Navbar from "../components/Navbar.astro";

export interface Props {
  title: string;
  metaDescription?: string;
  noIndex?: boolean;

  navbarColor: "white" | "black";
}

const { title, metaDescription, noIndex, navbarColor } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    {metaDescription && <meta name="description" content={metaDescription} />}
    {noIndex ? <meta name="robots" content="noindex" /> : <meta name="robots" content="index" />}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@500;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>

  <body>
    <Navbar whiteItems={navbarColor === "white"} />
    <slot />
  </body>
</html>

<style is:global lang="scss">
  @import "../styles/vars.scss";
  @import "../styles/admonitions.scss";

  html {
    font-family: system-ui, sans-serif;
  }

  html,
  body {
    margin: 0;
    padding: 0;
  }

  code {
    font-family: "Fira Code", monospace;
  }

  .astro-code {
    font-family: "Fira Code", monospace;
    font-size: 1rem;
    line-height: 1.5;
    padding: 1rem;
    border-radius: $radius;
    overflow: auto;
    max-width: 100%;
    margin: 0 auto;
  }
</style>
