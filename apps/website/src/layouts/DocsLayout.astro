---
import Footer from "../components/Footer.astro";
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout title="License-Cop" navbarColor="black">
  <div class="background">
    <div class="waves" />
    <div class="bed" />
  </div>

  <main>
    <div class="markdown-content">
      <slot />
    </div>

  </main>

  <Footer />
</BaseLayout>

<style lang="scss" >
  .background {
    position: fixed;
    width: 100%;
    height: 100vh;
    z-index: -1;
    background-color: #fff;

    $opacity: 0.15;

    .waves {
      width: 100%;
      height: 90vh;

      opacity: $opacity;
      background: url('/full-waves.svg') no-repeat center center;
      background-size: 100% 100%;
    }

    .bed {
      width: 100%;
      height: 10vh;

      opacity: $opacity;
      background-color: rgba(134,168,230,1);
    }
  }

  main {
    width: 100%;

    display: grid;
    justify-items: center;
  }

  .markdown-content {
    max-width: 800px;
    width: 100%;

    margin-top: 6rem;
  }
</style>

<style lang="scss" is:global>
  $darkBlue: darken($color: #2666d5, $amount: 10%);

  .markdown-content {
    h1, h2, h3, h4, h5, h6, a, code {
      color: $darkBlue;
    }
  }
</style>
