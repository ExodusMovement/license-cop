{
  "name": "permissive",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/permissive/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/permissive",
        "main": "packages/permissive/src/index.jsonc",
        "tsConfig": "packages/permissive/tsconfig.lib.json",
        "assets": [
          "packages/permissive/src/*.jsonc",
          "packages/permissive/README.md",
          "LICENSE.md"
        ],
        "updateBuildableProjectDepsInPackageJson": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/permissive/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/permissive/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/version.mjs permissive {args.version}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs permissive {args.tag}"
      }
    }
  },
  "tags": []
}
